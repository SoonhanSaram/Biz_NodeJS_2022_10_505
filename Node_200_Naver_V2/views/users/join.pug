extends ../layout

block content 
    .w3-container.w3-padding-24.user.login
        section.w3-card-4 
            header.w3-container.w3-sand.w3-center 
                h3.w3-green.w3-round.w3-padding-small 회원가입
                    if(ERROR.CODE == 1)
                        h5.w3-red.w3-padding-small.w3-round #{ERROR.MESSAGE}
            form(method="POST").w3-container.w3-padding-16.w3-center
                input(placeholder="USERNAME" name="username" value=`${USER.username}`).w3-input
                if(ERROR.CODE == 1)
                    .w3-text-red.w3-left *  #{ERROR.MESSAGE}
                input(placeholder="비밀번호" name="password" type="password").w3-input
                if(ERROR.CODE == 2)
                    .w3-text-red.w3-left *  #{ERROR.MESSAGE}
                input(placeholder="비밀번호 확인" name="re_password" type="password").w3-input
                if(ERROR.CODE == 3 || ERROR.CODE == 4)
                    .w3-text-red.w3-left *  #{ERROR.MESSAGE}
                input(placeholder="실명" name="realname" value=`${USER.realname}`).w3-input
                input(placeholder="닉네임" name="nickname" value=`${USER.nickname}`).w3-input
                input(placeholder="이메일" name="email" type="email" value=`${USER.email}`).w3-input
                input(placeholder="전화번호" name="tel" type="phone" value=`${USER.tel}`).w3-input
                input(placeholder="주소" name="addr" value=`${USER.addr}`).w3-input
                button().w3-button.w3-margin-top.w3-teal.w3-block.w3-round 회원가입
