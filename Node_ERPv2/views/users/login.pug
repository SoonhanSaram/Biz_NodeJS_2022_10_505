extends ../layout

block content 
    link(rel='stylesheet', href='/css/login/login.css')
    script(src="/js/users/login.js")
    article.user.login.container 
        h1.user.login.tilte 로그인
        if error
            //- pug내에서 script를 쓰기 위해서 "-" 사용
            - let msg = error === "LOGIN" ? "로그인이 필요한 서비스입니다" : null
            - msg = error === "ROLE" ? "사용할 권한이 없습니다" : msg
            - msg = error === "USERNAME" ? "USERNAME이 없습니다" : msg
            - msg = error === "PASSWORD" ? "비밀번호가 잘못되었습니다" : msg
                h2.user.login.error= msg

        form.user.login(method="post")
            input(name="username" placeholder="USERNAME" tilte="사용자 ID")
            input(name="password" type="password" placeholder="PASSWORD" tilte="비밀번호")
            button(type="button").user.login 로그인
        div.login.url
            a(href="/users/join") 회원가입
            span &nbsp;|&nbsp;
            a(href="/users/loss/username") 아이디
            span &nbsp;|&nbsp;
            a(href="/users/loss/password") 비밀번호 찾기