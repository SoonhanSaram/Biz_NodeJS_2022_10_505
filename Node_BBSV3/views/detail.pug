extends layout 

block content
    link(rel='stylesheet', href='/css/detail.css')
    script. 
        //- pug변수 bbs._id 데이터를
        //- js에서 사용할 수 있도록 id변수에 할당하기
        const id = `#{bbs._id}`
    script(src="/js/detail.js")
    article.bbs.detail        
        div.label 작성일자
        div.data= bbs.b_date 
        div.label 작성시각
        div.data= bbs.b_time 
        div.label 작성자
        div.data= bbs.b_write
        div.label 제목
        div.data= bbs.b_subject 
        div.label 내용  
        div.data= bbs.b_content 
    .bbs.detail.button.box 
        button.bbs.update(type="button") 수정
        button.bbs.delete(type="button") 삭제
        button.bbs.list(type="button") 목록
    .bbs.comments
        .comments.item 
            each comment in bbs.b_comments
                p= `${comment.ct_write}..${comment.ct_comment}`
        .comments.input 
            input()#b_comment
            button.comment.add 댓글추가
