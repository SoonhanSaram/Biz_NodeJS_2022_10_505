extends layout 

block content
    link(rel='stylesheet', href='/css/detail.css')
    script. 
        //- pug변수 bbs._id 데이터를
        //- js에서 사용할 수 있도록 id변수에 할당하기
        const id = `#{bbs._id}`
    script(src="/js/detail.js")
    article.bbs.detail
        .row.Fst
            div 작성일자
            div= bbs.b_date 
            div 작성시각
            div= bbs.b_time 
            div 작성자
            div= bbs.b_write
        .row.Snd
            div 제목
            div= bbs.b_subject 
        .row.Trd
            div 내용
